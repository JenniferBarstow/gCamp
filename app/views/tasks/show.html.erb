<h1>
  <div class="page-header">
    <% if @task.complete %>
      <s><%=@task.description.titleize %></s>
    <% else %>
      <%= @task.description %>
    <% end %>

    <%= link_to 'Edit', edit_task_path(@task), class:"btn btn-info pull-right" %>
  </div>
</h1>



<ol class="breadcrumb">
  <li><%= link_to "Tasks", tasks_path(@tasks)  %></li>
  <li class="active"><%= @task.description %></li>
</ol>

<strong>Due On</strong>:
<% if @task.due_date %>
  <%= @task.due_date.strftime("%m/%d/%Y") %>
<% end %>
