.page-header
  pull-right
    = link_to 'New Task', new_task_path(@task), class:"btn btn-info"
  %h1Tasks
%table.table
  %thead
    %tr
      %th Description
      %th colspan=2>Due On

  % @tasks.each do |task|

    % if task.complete %>
    %td><s><%= link_to task.description, task
    % else 
    %td = link_to task.description, task

      % if task.due_date
      %= task.due_date.strftime("%m/%d/%Y")

    %td class="text-right">
      = link_to 'Edit', edit_task_path(task), class: "btn btn-info"
      = link_to 'Delete', task, method: :delete, class: "btn btn-danger"
